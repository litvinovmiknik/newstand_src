include ../utils/config
include ../utils/data
include ../utils/mixins
include ../utils/blocks

doctype html
html(lang="ru")
    head
        block title
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        meta(name="apple-mobile-web-app-capable" content="yes")
        meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
        block meta
        link(rel="shortcut icon" type="image/x-icon" href="assets/images/favicon.ico")
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700;800&display=swap" rel="stylesheet")
        link(rel="stylesheet" href="assets/styles/libs/bootstrap.min.css")
        link(rel="stylesheet" href="assets/styles/libs/jquery.bxslider.min.css")
        link(rel="stylesheet" href="assets/styles/libs/slicknav.min.css")
        link(rel="stylesheet" href="assets/styles/index.css")
        block link
    body
        +popup()
        block body
        script(src="assets/scripts/libs/jquery-3.5.1.min.js")
        script(src="assets/scripts/libs/bootstrap.min.js")
        script(src="assets/scripts/libs/jquery.bxslider.min.js")
        script(src="assets/scripts/libs/jquery.slicknav.min.js")
        script(src="assets/scripts/index.js")
        block script